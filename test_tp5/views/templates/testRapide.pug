main.mainContent
  h1#domain.domain {{question.domaine}}
  section#suivant
    //les questions sont infinies
    form#testForm(routerLink="/testRapide")
      h1#enonce.enonce {{question.question}}
      ul#choixreponses.choixreponses
        li.choix(*ngFor = "let choice of question.choices; let i=index",[draggable]="isDraggable()",(dragstart)="onDragStart($event, i)") {{choice}}
        div#reponse.reponse((dragover)="onDragOver($event)",(drop)="onDrop($event)")
      button#suivantBtn.button(type='submit',value='suivantBtn',(click)="getTestQuestion()") Suivant
  section#retour
    form(routerLink="/tabBord")
      button#retourBtn.button Retour
  section.currentScore 
      | Note Courante : -- / --
  stats
