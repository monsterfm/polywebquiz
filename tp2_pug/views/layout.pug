doctype html
html
  block link
    -var selected = 'Index'; //default

  -var menu = { 'Index': '/index', 'Tableau de bord': '/tabBord', 'Instructions': '/instructions' };
  head
    title Apprenez le web par des QUIZ!
    meta(charset='utf-8')
    meta(name='viewport', content='width=divice-width, initial-scale=1.0')
    block stylecss
    block tabBordcss
  body.body
    header.mainHeader
      block logo
      nav
        ul
          each val, key in menu
            li
              if selected === key
                li.active
                  a.selected(href=val, title=key)= key
              else
                li
                  a(href=val, title=key)= key
      block content
