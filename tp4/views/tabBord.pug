extends layout
block link
  -var selected = 'Tableau de bord';
block stylecss
  link(rel='stylesheet', type='text/css', href='stylesheets/tabBord.css')
  script(type='text/javascript', src='https://code.jquery.com/jquery-3.1.1.js')
  script(type='text/javascript', src='/javascripts/tabBord.js')
block content
  main.mainContent
      section.testrapide
        h1 Test rapide
        form#testRapideBtnForm(action='/testrapide')
          button#testRapideBtn.button Test rapide
      section.examen
        h1 Examen
        form#examenFormBtn(action='/examen' method='get')
          select#domainChoice.domainChoice(required)
            option(value='HTML') HTML
            option(value='CSS') CSS
            option(value='JavaScript') JavaScript
            option(value='Continuer') Continuer
          select#examNumber.examNumber(required)
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
            option(value='7') 7
            option(value='8') 8
          input#examenBtn.button(type='submit' value='Examen')
      section.statistiques
        h1 Statistiques
        p#stats
          br
        p#statstest
          br
        // link for details button
        a(href='#detailsBox')
          input.button(type='button', value='Details', id='Details')
        // link for click to return dashboard
        #detailsBox.modal
          p#textDetails
            |         Notes des examens: 
            ul#listeExams
              li#list
              script moyenneExamens();
        a.outside(href='#tabBord')
        br
        button#resetBtn.button Remise à zéro